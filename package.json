{
  "name": "qrookie-node",
  "version": "0.1.0",
  "private": true,
  "description": "QRookieNode is a cross-platform tool to manage Quest devices and games.",
  "author": {
    "name": "Victor Wads",
    "email": "victor.laureano+qrookienode@gmail.com"
  },
  "homepage": "./",
  "scripts": {
    "headless": "yarn react:build && yarn electron:build && yarn headless:no-build",
    "headless:no-build": "electron ./dist/electron/main.js --headless --no-sandbox",
    "build": "bash ./platforms/build.sh",
    "dev": "bash ./platforms/dev.sh",
    "bundle": "yarn build && electron-builder",
    "bundle:android-termux": "bash ./platforms/bundle-android-termux.sh",
    "bundle:mac-dev": "yarn bundle --mac --dir -c.mac.identity=null",
    "bundle:no-build": "electron-builder",
    "react:dev": "cross-env BROWSER=none react-app-rewired start",
    "react:build": "cross-env BUILD_PATH=dist/react react-app-rewired build",
    "electron:build": "tsc --project tsconfig.electron.json",
    "electron:dev": "nodemon --watch electron --ext ts --exec \"tsc --project tsconfig.electron.json && cross-env NODE_ENV=development electron ./dist/electron/main.js\"",
    "lint": "clear && eslint --config ./eslint.config.mjs electron src",
    "test": "react-scripts test"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "node-7z": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/electron": "^1.6.12",
    "@types/jest": "^27.0.1",
    "@types/node": "^22.10.5",
    "@types/node-7z": "^2.1.10",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-config-react-app": "^7.0.1",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "react-app-rewired": "^2.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.19.0"
  },
  "build": {
    "appId": "br.com.victor.qrookie.node",
    "productName": "QRookie",
    "files": [
      "dist/react/**/*",
      "dist/electron/**/*",
      "assets/images/**/*"
    ],
    "extraMetadata": {
      "main": "dist/electron/main.js"
    },
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "QRookieMacOS-${version}.${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "artifactName": "QRookieWindows-${version}.${arch}.${ext}",
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "artifactName": "QRookieLinux-${version}.${arch}.${ext}",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
